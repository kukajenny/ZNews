<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/sliding_card_content_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/user_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/card_item_textview_telnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_imageview"
        android:layout_alignBottom="@+id/user_imageview"
        android:background="#90575E6A"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:text="dfg"/>

    <TextView
        android:id="@+id/card_item_textview_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="30px"
        android:text="ghg"/>

    <TextView
        android:id="@+id/card_item_textview_smsbody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dsfsdf"
        android:layout_below="@+id/user_imageview"/>
    <TextView
        android:id="@+id/card_item_textview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dfd"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>