<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/list_item_imageview"
    android:layout_width="130px"
    android:layout_height="130px"
    android:src="@drawable/icon_people"
    android:padding="10px"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30px">
        <TextView
            android:id="@+id/list_item_textview_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dfdfg"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginTop="10px"/>
        <TextView
            android:id="@+id/list_item_textview_smsbody"
            android:layout_below="@+id/list_item_textview_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dgfdgd"
            android:layout_marginTop="10px"
            android:textSize="17sp"
            android:layout_marginBottom="10px"/>
        <TextView
            android:id="@+id/list_item_textview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="dgdg"
            android:layout_marginTop="30px"
            android:textSize="15sp"

            />
    </RelativeLayout>
</LinearLayout>